<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="gov.nih.nci.security.authorization.domainobjects.Role" 
    table="CSM_ROLE"
>

    <id
        name="id"
        type="java.lang.Long"
        column="ROLE_ID"
        unsaved-value="null"
    >
        <generator class="native">
		 <param name="sequence">CSM_ROLE_ROLE_ID_SEQ</param>
	 </generator>
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="ROLE_NAME"
        not-null="true"
        length="100"
    />
    <property
        name="desc"
        type="java.lang.String"
        column="ROLE_DESCRIPTION"
        length="200"
    />
    <property
        name="active_flag"
        type="byte"
        column="ACTIVE_FLAG"
        not-null="true"
        length="1"
    />
    <property
        name="updateDate"
        type="java.sql.Date"
        column="UPDATE_DATE"
        length="10"
    />

    <!-- Associations -->
  
    <set name="privileges" lazy="true" table="CSM_ROLE_PRIVILEGE">
       <key column="role_id"/>
       <many-to-many 
           column="privilege_id" 
           class="gov.nih.nci.security.authorization.domainobjects.Privilege"
           
        />
     </set>
    <many-to-one
        name="application"
        class="gov.nih.nci.security.authorization.domainobjects.Application"
        not-null="true"
    >
        <column name="APPLICATION_ID" />
    </many-to-one>

</class>
</hibernate-mapping>

